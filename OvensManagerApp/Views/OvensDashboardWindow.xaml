<Window x:Class="OvensManagerApp.Views.OvensDashboardWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:OvensManagerApp.Views"
        xmlns:controls="clr-namespace:OvensManagerApp.Controls"
        mc:Ignorable="d"
        
        ShowInTaskbar="False"
        WindowStyle="None"
        Background="Transparent" 
        d:DesignHeight="920" d:DesignWidth="1790"  >
 
    <Border CornerRadius="50" Margin="5">
        <Grid x:Name="OvensGrid">
            <Grid.ColumnDefinitions >
                <ColumnDefinition Width="1*" />
                <ColumnDefinition Width="1*" />
                <ColumnDefinition Width="1*" />
                <ColumnDefinition Width="1*" />
            </Grid.ColumnDefinitions >
            <Grid.RowDefinitions >
                <RowDefinition Height="1*" />
                <RowDefinition Height="1*" />
                <RowDefinition Height="1*" />
                <RowDefinition Height="1*" />
            </Grid.RowDefinitions>

            <controls:OvenControl Grid.Row = "0" x:Name = "oven1"  OvenNumber= "1"  Grid.Column="0" BackgroundColor="{StaticResource CyanGradient}"        OvenFontSize="40.0" FontColor="Black"/>
            <controls:OvenControl Grid.Row = "0" x:Name = "oven2"  OvenNumber= "2"  Grid.Column="1" BackgroundColor="{StaticResource RedGradient}"         OvenFontSize="40.0" FontColor="Black"/>
            <controls:OvenControl Grid.Row = "0" x:Name = "oven3"  OvenNumber= "3"  Grid.Column="2" BackgroundColor="{StaticResource GreenGradient}"       OvenFontSize="40.0" FontColor="Black"/>
            <controls:OvenControl Grid.Row = "0" x:Name = "oven4"  OvenNumber= "4"  Grid.Column="3" BackgroundColor="{StaticResource YellowGradient}"      OvenFontSize="40.0" FontColor="Black"/>
            <controls:OvenControl Grid.Row = "1" x:Name = "oven5"  OvenNumber= "5"  Grid.Column="0" BackgroundColor="{StaticResource BlackGradient}"       OvenFontSize="40.0" FontColor="White"/>
            <controls:OvenControl Grid.Row = "1" x:Name = "oven6"  OvenNumber= "6"  Grid.Column="1" BackgroundColor="{StaticResource CyanGradient}"        OvenFontSize="40.0" FontColor="Black"/>
            <controls:OvenControl Grid.Row = "1" x:Name = "oven7"  OvenNumber= "7"  Grid.Column="2" BackgroundColor="{StaticResource CyanGradient}"        OvenFontSize="40.0" FontColor="Black"/>
            <controls:OvenControl Grid.Row = "1" x:Name = "oven8"  OvenNumber= "8"  Grid.Column="3" BackgroundColor="{StaticResource CyanGradient}"        OvenFontSize="40.0" FontColor="Black"/>
            <controls:OvenControl Grid.Row = "2" x:Name = "oven9"  OvenNumber= "9"  Grid.Column="0" BackgroundColor="{StaticResource CyanGradient}"        OvenFontSize="40.0" FontColor="Black"/>
            <controls:OvenControl Grid.Row = "2" x:Name = "oven10" OvenNumber= "10" Grid.Column="1" BackgroundColor="{StaticResource CyanGradient}"        OvenFontSize="40.0" FontColor="Black"/>
            <controls:OvenControl Grid.Row = "2" x:Name = "oven11" OvenNumber= "11" Grid.Column="2" BackgroundColor="{StaticResource CyanGradient}"        OvenFontSize="40.0" FontColor="Black"/>
            <controls:OvenControl Grid.Row = "2" x:Name = "oven12" OvenNumber= "12" Grid.Column="3" BackgroundColor="{StaticResource CyanGradient}"        OvenFontSize="40.0" FontColor="Black"/>
            <controls:OvenControl Grid.Row = "3" x:Name = "oven13" OvenNumber= "13" Grid.Column="0" BackgroundColor="{StaticResource CyanGradient}"        OvenFontSize="40.0" FontColor="Black"/>
            <controls:OvenControl Grid.Row = "3" x:Name = "oven14" OvenNumber= "14" Grid.Column="1" BackgroundColor="{StaticResource CyanGradient}"        OvenFontSize="40.0" FontColor="Black"/>
            <controls:OvenControl Grid.Row = "3" x:Name = "oven15" OvenNumber= "15" Grid.Column="2" BackgroundColor="{StaticResource CyanGradient}"        OvenFontSize="40.0" FontColor="Black"/>
            <controls:OvenControl Grid.Row = "3" x:Name = "oven16" OvenNumber= "16" Grid.Column="3" BackgroundColor="{StaticResource CyanGradient}"        OvenFontSize="40.0" FontColor="Black"/>

        </Grid>
    </Border>
</Window>
