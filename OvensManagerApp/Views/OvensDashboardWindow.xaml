<Window x:Class="OvensManagerApp.Views.OvensDashboardWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:OvensManagerApp.Views"
        xmlns:MyControls="clr-namespace:OvensManagerApp.MyControls"
        mc:Ignorable="d"
        
        ShowInTaskbar="False"
        WindowStyle="None"
        Background="Transparent" 
        d:DesignHeight="920" d:DesignWidth="1790"  >

    <Border CornerRadius="50" Margin="5">
        <ItemsControl ItemsSource="{Binding Ovens}">
            <ItemsControl.ItemsPanel>
                <ItemsPanelTemplate>
                    <!-- 4 columns, 4 rows auto-calculated -->
                    <UniformGrid Columns="4" Rows="4"/>
                </ItemsPanelTemplate>
            </ItemsControl.ItemsPanel>
            <ItemsControl.ItemTemplate>
                <DataTemplate>
                    <MyControls:OvenCard
                        OvenNumber="{Binding Number}"
                        OvenTemperature="{Binding Temperature}"
                        RunTime="{Binding RunTime}"
                        BackgroundColor="{Binding BackgroundColor}"
                        OvenFontSize="{Binding DashboardFontSize, RelativeSource={RelativeSource AncestorType=Window}}"
                        FontColor="{Binding FontColor}"
                    />
                </DataTemplate>
            </ItemsControl.ItemTemplate>
        </ItemsControl>
    </Border>
</Window>
