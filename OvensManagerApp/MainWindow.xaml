<Window x:Class="OvensManagerApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:OvensManagerApp"
        xmlns:controls="clr-namespace:OvensManagerApp.MyControls"
        mc:Ignorable="d"
        Title="MainWindow"           
        WindowStartupLocation="Manual" 
        Background="White" 
        Height="325" 
        Width="530" Closing="Window_Closing" >
    <Border CornerRadius="50" Margin="4">
        <Grid >
            <StackPanel Orientation="Vertical" >

                <Button  Content="Открыть экран состояния" Width="150" Height="50" Margin="10" Click="OpenDashboard_Click">
                    <Button.Resources>
                        <Style TargetType="Border">
                            <Setter Property="CornerRadius" Value="5"/>
                        </Style>
                    </Button.Resources>
                </Button>
                
                
                
                <Button Content="Запустить" Width="150" Height="50" Margin="10" Click="StartOnDashboard_Click">
                    <Button.Resources>
                        <Style TargetType="Border">
                            <Setter Property="CornerRadius" Value="5"/>
                        </Style>
                    </Button.Resources>
                </Button>

                <Button x:Name="btnMaximize" Content="Maximize" Width="150" Height="50" Margin="10" Click="btnMaximize_Click">
                    <Button.Resources>
                        <Style TargetType="Border">
                            <Setter Property="CornerRadius" Value="5"/>
                        </Style>
                    </Button.Resources>
                </Button>
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                    <TextBlock Text="Размер шрифта" VerticalAlignment="Center" ></TextBlock>
                    <Button Content="+" Width="20" Height="20" Margin="10" Click="btnIncreaseFontSize_Click">
                    <Button.Resources>
                        <Style TargetType="Border">
                            <Setter Property="CornerRadius" Value="5"/>
                        </Style>
                    </Button.Resources>
                </Button>
                    <TextBlock Text="{Binding DashboardFontSize,RelativeSource={RelativeSource AncestorType=Window}}" VerticalAlignment="Center"></TextBlock>  
                    <Button Content="-" Width="20" Height="20" Margin="10" Click="btnDecreaseFontSize_Click">
                    <Button.Resources>
                        <Style TargetType="Border">
                            <Setter Property="CornerRadius" Value="5"/>
                        </Style>
                    </Button.Resources>
                </Button>
            </StackPanel>
            </StackPanel>
        </Grid>
    </Border>
</Window>
